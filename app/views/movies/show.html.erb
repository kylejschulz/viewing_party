<img class="right" src="https://image.tmdb.org/t/p/w200<%=@movie.poster_path%>" alt="<%= @movie.title %>">

<h1>Welcome <%= @current_user.full_name %>!</h1>

<%= button_to "Create Viewing Party", new_party_path, method: :get, params: {movie_id: @movie.id} %>

<h2><%= @movie.title %></h2>

Vote Average: <%= @movie.vote_average %>/10<br>
Runtime: <%= @movie.runtime %><br>
Genre(s): <%= @genres.to_sentence %><br>

<hr>
Summary: <br>
<%= @movie.description %>
<hr>
Cast: <br>
<% @cast.each do |person| %>
  <%= person[:actor] %> - <%=person[:character] %><br>
<% end %>
<hr>
<%= @reviews.size %> Reviews: <br>
<% if @reviews.class == Array %>
  <% @reviews.each do |review| %>
    <p style='border:solid' id="review-<%= review[:name] %>"><%= review[:name] %>:<br>
    <%= review[:content] %></p>
  <% end %>
<% else %>
  <%= @reviews %>
<% end %>
